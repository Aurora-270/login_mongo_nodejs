<%- layout('layouts/main') %>
<!--h3>Editar un libro</h3-->

<!--Formulario-->
<div class="row">
    <div class="col-md-4 offset-md-4">
      <div class="card mt-4 text-center">
        <div class="card-header">
          <h4>Editar un libro</h4>
        </div>
        <div class="card-body">
            <form action="/edit_libro/<%= edit_book._id %>" method="POST">
                <div class="form-group mb-3">
                    <input type="text" name="Titulo" value="<%= edit_book.Titulo%>" class="form-control">
                </div> 
                <div class="form-group mb-3">                            
                    <input type="text" name="Autor" value="<%= edit_book.Autor%>" class="form-control">
                </div>  
                <div class="form-group mb-3">                            
                    <input type="text" name="Genero" value="<%= edit_book.Genero%>" class="form-control">
                </div>  
                <div class="form-group mb-3 d-grid gap-2 col-6 mx-auto">
                    <button type="submit" class="btn btn-outline-success">Modificar</button>
                </div>                                           
            </form>
        </div>
      </div>
    </div>
  </div>