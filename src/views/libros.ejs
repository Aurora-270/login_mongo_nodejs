<%- layout('layouts/main') %>
<h3>Pagina de libros</h3>
<h3>Puede editar, agregar o eliminar un libro de la siguiente lista</h3> 

<!--Formulario-->
<div class="row">
    <div class="col-md-4 offset-md-4">
      <div class="card mt-4 text-center">
        <div class="card-header" style="background-color: #36db5f;">
          <h4>Agregar nuevo libro</h4>
        </div>
        <div class="card-body" style="background-color: #8decc8;">
            <form action="/add" method="POST">
                <div class="form-group mb-3">
                    <input type="text" name="Titulo" placeholder="Inserta un titulo" class="form-control">
                </div> 
                <div class="form-group mb-3">                            
                    <input type="text" name="Autor" placeholder="Nombre del autor" class="form-control">
                </div>  
                <div class="form-group mb-3">                            
                    <input type="text" name="Genero" placeholder="Genero del libro" class="form-control">
                </div>  
                <div class="form-group mb-3 d-grid gap-2 col-6 mx-auto">
                    <button type="submit" class="btn btn-success">Guardar</button>
                </div>                                           
            </form>
        </div>
      </div>
    </div>
</div>


<table class="table table-hover table-striped">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Titulo</th>
        <th scope="col">Autor</th>
        <th scope="col">Genero</th>
        <th scope="col">Accion</th>
      </tr>
    </thead>
    <tbody>
        <% for(var i=0; i < book.length; i++) {%>
            <tr>
                <td><%= i+1%></td>
                <td><%= book[i].Titulo %></td>
                <td><%= book[i].Autor %></td>
                <td><%= book[i].Genero %></td>
                <td>
                    <a href="/delete/<%= book[i]._id %>" class="btn btn-danger btn-sm">Eliminar</a>
                    <a href="/edit_libro/<%= book[i]._id%>" class="btn btn-info btn-sm">Editar</a>
                </td>
            </tr>                   
        <%}%>
        
    </tbody>
  </table>

 